{
  "mcpServers": {
    "n8n-mcp": {
      "command": "node",
      "args": ["${MCP_N8N_PATH}"],
      "env": {
        "N8N_API_URL": "${N8N_API_URL}",
        "N8N_API_KEY": "${N8N_API_KEY}"
      },
      "tools": {
        "search": [
          "search_nodes",
          "search_templates",
          "get_node",
          "get_template",
          "tools_documentation"
        ],
        "read": [
          "n8n_get_workflow",
          "n8n_list_workflows",
          "n8n_executions",
          "n8n_workflow_versions",
          "n8n_validate_workflow",
          "validate_node",
          "validate_workflow",
          "n8n_health_check"
        ],
        "write": [
          "n8n_create_workflow",
          "n8n_update_full_workflow",
          "n8n_update_partial_workflow",
          "n8n_delete_workflow",
          "n8n_autofix_workflow",
          "n8n_test_workflow",
          "n8n_deploy_template"
        ]
      }
    }
  },
  "toolPermissions": {
    "architect": {
      "allow": [],
      "deny": ["*"]
    },
    "researcher": {
      "allow": ["search", "read"],
      "deny": ["write"]
    },
    "builder": {
      "allow": ["search", "read", "write"],
      "deny": []
    },
    "qa": {
      "allow": ["read", "n8n_test_workflow", "n8n_update_partial_workflow"],
      "deny": ["n8n_create_workflow", "n8n_update_full_workflow", "n8n_delete_workflow"]
    },
    "analyst": {
      "allow": ["read"],
      "deny": ["write"]
    }
  }
}
